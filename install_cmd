
#################### MISC
# utils
sudo apt install vim ruby screen tmux tcsh git

#################### BASE platform guide.1.14@595040
# 2 Development system setup
# 2.1
sudo apt-get update
sudo apt-get dist-upgrade

# tools and libraries for building the DDK
sudo apt-get install bison flex gawk gcc g++ libclang1-10 llvm make
sudo apt-get install ninja-build m4 meson patch pkg-config
sudo apt-get install python-is-python3 python3-clang-10 tar zip

# tools and libraries for building dependencies and generating sysroots
sudo apt install automake bc binfmt-support cmake dpkg-dev
sudo apt install libelf-dev libncurses5-dev libssl-dev
sudo apt install mesa-common-dev opencl-headers perl qemu
sudo apt install qemu-user-static texinfo wget xutils-dev

# linux WS DDK
sudo apt install autopoint gperf intltool libglib2.0-dev
sudo apt install libltdl-dev libtool python3-libxml2 python3-mako
sudo apt install xfonts-utils xsltproc x11-xkb-utils

#################### x86 Platform Guide1.14@595040
# 3 development system set up
# 3.1 addtional tools and libraries
sudo apt install gcc-i686-linux-gnu gcc-9-multilib linux-libc-dev:i386
sudo apt install g++-i686-linux-gnu g++-9-multilib
# 4 target system set up
# addtional packages needed by the DDK and its dependencies
sudo apt install libdrm-dev libunwind-dev zlib1g-dev

